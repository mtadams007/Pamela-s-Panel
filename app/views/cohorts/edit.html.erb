<%= form_for @cohort do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @cohort.name%>
  <%= f.label :start %>
  <%= f.date_field :start, value: @cohort.start%>
  <%= f.label :end %>
  <%= f.date_field :end, value: @cohort.end%>
  <%= f.label :educator_id %>
  <%= f.collection_select :educator_id, Educator.order(:last_name), :id,:last_name, include_blank: true, value: @cohort.educator_id %>
  <%= f.submit %>
<% end %>

<%= link_to 'Drop', cohort_path(@cohort), method: :delete %>
