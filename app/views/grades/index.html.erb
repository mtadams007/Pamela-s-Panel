<div class="header-container <%=@color_scheme%>_header">
<h1 class="text-center <%=@color_scheme%>-h">hi</h1></div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last Name</th>
        <th>Grade</th>

      </tr>
    </thead>
    <tbody>
      <% @cohort.students.each do |student| %>
      <tr>
        <td> <a href="/students/<%=student.id%>"><%= student.first_name %></a></td>
        <td><%= student.last_name %></td>
        <td><%= student.grades.find_by(cohort_id: @cohort.id).mark %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
